@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "My Movie List";
}

<h1>My Movie List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- Filter Form -->
<form asp-controller="Movies" asp-action="My Movie List" method="get" style="margin-bottom: 20px;">
    <p style="display: flex; flex-wrap: wrap; gap: 10px;">

        <select asp-for="MovieGenre" asp-items="Model.Genres" style="padding: 6px; border-radius: 4px;">
            <option value="">All Genres</option>
        </select>

        <label>
            Title:
            <input type="text" asp-for="SearchString" style="padding: 6px; border-radius: 4px;" />
        </label>

        <label>
            Year (or newer):
            <input type="number" name="year" value="@ViewBag.SelectedYear" min="1900" max="2100" style="padding: 6px; width: 100px; border-radius: 4px;" />
        </label>

        <input type="submit" value="Filter" class="btn btn-success" style="padding: 6px 12px; border-radius: 4px;" />
    </p>
</form>

<!-- Movie Table -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Genre)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies!)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Improve input and select spacing */
    input[type="text"],
    input[type="number"],
    select,
    textarea {
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    form label {
        margin-right: 10px;
        font-weight: 500;
    }

    .btn {
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn:hover {
        opacity: 0.9;
    }

    table {
        margin-top: 15px;
    }
</style>